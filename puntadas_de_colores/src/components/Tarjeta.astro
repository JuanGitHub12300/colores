---
import ContenidoTarjeta from "./ContenidoTarjeta.astro"
import Bestido from "./Bestido.astro"
import Terno from "./Terno.astro"
import Niños from "./Niños.astro"
---

<div class="flex flex-wrap"> 
    <ContenidoTarjeta class="lg:pt-12 pt-6 w-full md:w-4/12 px-4 text-center" bgcircle="bg-pink-500" icono = {Bestido} 
    title = "Elegancia femenina" description = "Colección sofisticada para la mujer moderna" tipoRopa="#damas"></ContenidoTarjeta>
    <ContenidoTarjeta class = "w-full md:w-4/12 px-4 text-center" bgcircle="bg-blue-400" icono = {Terno} 
    title = "Estilo masculino" description = "Prendas versátiles para el hombre contemporáneo" tipoRopa="#caballeros"></ContenidoTarjeta>
    <ContenidoTarjeta class = "pt-1 md:pt-12 w-full md:w-4/12 px-4 text-center" bgcircle="bg-green-400" icono = {Niños} 
    title = "Diversión y comodidad" description = "Ropa divertida y práctica para los más pequeños" tipoRopa="#niños"></ContenidoTarjeta>
</div>
